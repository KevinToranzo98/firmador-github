{
  "name": "Firmador",
  "productName": "Firmador",
  "version": "2.0.0",
  "description": "Firmador 2.0 SignBox",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "make": "electron-forge make",
    "pack:win": "electron-packager . Firmador --platform=win32 --arch=x64 --out=./dist --overwrite --icon=./src/assets/images/Box.ico",
    "make:linux": "electron-forge make --platform linux",
    "make:mac": "electron-forge make --platform darwin",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/KevinToranzo98/firmador-github",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.firmador.signbox",
    "productName": "Autoupdater app",
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "directories": {
      "output": "dist"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/assets/images/Box.png",
        "name": "Firmador"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "src/assets/images/Box.png",
              "name": "Firmador"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "icon": "src/assets/images/Box.png",
            "name": "Firmador"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "src/assets/images/Box.png",
            "name": "Firmador"
          }
        }
      ]
    }
  },
  "homepage": "https://boxcustodia.com",
  "keywords": [],
  "author": {
    "name": "Box Custodia",
    "email": "sistemas@boxcustodia.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "graphene-pk11": "^2.3.2",
    "node-forge": "^1.3.1",
    "node-webcrypto-p11": "^2.6.3",
    "pdf-lib": "^1.17.1",
    "systeminformation": "^5.18.3",
    "usb": "^2.9.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-dmg": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^24.2.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.1"
  }
}
